
pipeline {
    agent any 
    stages{
      
      stage('git checkout') {
        steps {
            git branch: 'main', credentialsId: 'github-cred', url: 'https://github.com/demodevops2/devopscls23repo.git'
              }
      }
      
      stage('Terraform init') {
        steps {
            sh 'terraform init'
              }
      }
      
      stage('Terraform plan') {
        steps {
            sh 'terraform plan'
              }
      }
      
   

}

}
